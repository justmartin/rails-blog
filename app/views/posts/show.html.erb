<div class="container">

	<div class="row center-align">
		<h3>View Post</h3>

		<!-- displays individual post details -->
		<div class="row center-align">
			<div class="col s12">
	    	<div class="card">
	        <div class="card-content">
	          <span class="card-title"><%= @post.title %></span>
			  		<p><%= @post.content %></p>
	        </div>
	      </div>
	    </div>
	  </div>

	  <!-- displays comments for single post -->
	  <% @comments.each do |comment| %>
			  <div class="row">
					<div class="col s12 m6">
			    	<div class="card">
			        <div class="card-content">
			          <span class="card-title">Reply By: <%= comment.user.first_name %></span>
								<p><%= comment.content %></p>
			        </div>
			      </div>
			    </div>
			  </div>
		<% end %>

		<!-- creates form to create new comments -->
		<%= form_for Comment.new do |form| %>
			<%= hidden_field_tag "post_id", @post.id %>
		  <%= form.label :content %>
		  <%= form.text_field :content %>
		  <br>
		  <%= form.submit "Post Comment", class: "btn" %>
		<% end %>

	</div>

</div>
