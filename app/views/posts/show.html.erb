<div class="container">

	<h3>View Post</h3>

	<div class="row">
		<div class="col s12 m6">
    	<div class="card">
        <div class="card-content">
          <span class="card-title"><%= @post.title %></span>
					<p><%= @post.content %></p>
        </div>
      </div>
    </div>
  </div>

  <% @comments.each do |comment| %>
		  <div class="row">
				<div class="col s12 m6">
		    	<div class="card">
		        <div class="card-content">
		          <span class="card-title">Reply By: <%= comment.user.first_name %></span>
							<p><%= comment.content %></p>
		        </div>
		      </div>
		    </div>
		  </div>
	<% end %>

	<%= form_for Comment.new do |form| %>
		<%= hidden_field_tag "post_id", @post.id %>
	  <%= form.label :content %>
	  <%= form.text_field :content %>

	  <%= form.submit class: "btn" %>
	<% end %>

</div>
