<div class="container">

	<%= form_tag("/update-account", method: "post") do %>
		<%= label_tag(:first_name, "First Name") %>
		<%= text_field_tag(:first_name,  current_user.first_name) %>

		<%= label_tag(:last_name, "Last Name") %>
		<%= text_field_tag(:last_name, current_user.last_name) %>

		<%= label_tag(:email, "Email") %>
		<%= text_field_tag(:email, current_user.email) %>

		<%= label_tag(:password, "Password") %>
		<%= password_field_tag(:password, current_user.password) %>

		<%= submit_tag "Update Account", class: "btn" %>
	<% end %>

	<%= form_tag("/delete-account", method: "post") do %>
		<%= submit_tag "Delete Account", class: "btn" %>
	<% end %>

</div>