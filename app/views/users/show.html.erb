<div class="container">
	
	<div class="center-align">
		<h3><%= @user.first_name %> <%= @user.last_name %></h3>

		<span>Followers: <%= @followers.count %></span> <span>Following: <%= @followings.count %></span>

		<%= form_for Relationship.new do |form| %>
			<%= hidden_field_tag "followee_id", @user.id %>
			<%= form.submit "Follow", class: "btn" %>
		<% end %>

		<%= form_tag("/unfollow", method: "post") do %>
			<%= hidden_field_tag "followee_id", @user.id %>
			<%= submit_tag "Unfollow", class: "btn" %>
		<% end %>

	</div>

	<% @posts.each do |post| %>
		<div class="row">
			<div class="col s12 m6">
	    	<div class="card">

	        <div class="card-content">
	          <span class="card-title"><%= post.title %></span>
	          <p>Posted By: <%= post.user.first_name %></p>
						<p><%= post.content %></p>
	        </div>

	        <div class="card-action">
						<%= link_to "View Post", post %>
	        </div>

	      </div>
	    </div>
	  </div>
	<% end %>

</div>